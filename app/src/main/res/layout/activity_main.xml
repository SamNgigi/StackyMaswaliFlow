<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="8dp"
    tools:context=".UI.MainActivity">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.hai.jedi.stackymaswaliflow.Fragments.QuestionListFragment"
        tools:layout="@layout/fragment_question_list"
        android:id="@+id/questionListFragment"/>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.hai.jedi.stackymaswaliflow.Fragments.AnswerListFragment"
        tools:layout="@layout/fragment_answer_list"
        android:id="@+id/answerListFragment"/>

    <Button
        android:id="@+id/authenticate_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/authenticate"/>

</LinearLayout>